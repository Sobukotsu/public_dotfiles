"---------------------
"--- File settings ---
"---------------------
set nowritebackup
set nobackup
set noswapfile
set encoding=utf-8
set fileencodings=utf-8
set fileformats=unix,dos,mac
set ambiwidth=double
set wildmenu

"------------------------
"--- Display settings ---
"------------------------
set title
set number
set cursorline
set showcmd
set noerrorbells
set showmatch matchtime=1
set cmdheight=2
set laststatus=2
set display=lastline

colorscheme slate

"-----------------------
"---- Search settings ---
"------------------------
set hlsearch
set ignorecase
set smartcase
set wrapscan
set incsearch

"---------------------------
"--- Complement settings ---
"---------------------------
set expandtab
set tabstop=4
set shiftwidth=4
set smartindent

"--------------------------
"--- Operation settings ---
"--------------------------
set mouse=a
set clipboard=unnamed,autoselect
set shell = "zsh"

